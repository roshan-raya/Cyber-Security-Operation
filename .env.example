# Copy to .env and set values. Never commit .env.
#
# Required (must be set):
#   GF_SECURITY_ADMIN_USER     - Grafana admin username (e.g. admin)
#   GF_SECURITY_ADMIN_PASSWORD - Grafana admin password (use a strong value)
#
# Optional: override defaults below. Admin creds are only set via env (no hardcoding).

# Grafana admin (required for provisioning and login)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=changeme

# Secure-by-default Grafana settings (recommended to keep)
GF_USERS_ALLOW_SIGN_UP=false
GF_AUTH_ANONYMOUS_ENABLED=false

# Optional: override defaults
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000
